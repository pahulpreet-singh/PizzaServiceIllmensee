<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:text="Name"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/NametextViewMe"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:textAppearance="@android:style/TextAppearance.Medium" />

    <TextView
        android:text="Price"
        android:layout_width="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/NametextViewMe"
        android:layout_toStartOf="@+id/NametextViewMe"
        android:layout_alignBottom="@+id/NametextViewMe"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/pricetextViewME"
        android:textAppearance="@android:style/TextAppearance.Medium" />

    <TextView
        android:text="Content"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_below="@+id/NametextViewMe"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/contenttextViewME"
        android:textAppearance="@android:style/TextAppearance.Small" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_add_cart"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:layout_alignBottom="@+id/contenttextViewME"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/imageView5" />
</RelativeLayout>