<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_the_cart"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pizza.illmensee.pizzaserviceillmensee.TheCart">

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/rviewtc"
        android:layout_marginTop="38dp"
        android:layout_marginBottom="48dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/button_filled_red"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="8dp"
        android:text="Zur Kasse gehen"
        android:id="@+id/orderButtonTC" />

    <TextView
        android:text="Total: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_margin="8dp"
        android:layout_alignParentEnd="true"
        android:id="@+id/totalpricetextViewTC"
        android:textAppearance="@android:style/TextAppearance.Large" />
</RelativeLayout>
